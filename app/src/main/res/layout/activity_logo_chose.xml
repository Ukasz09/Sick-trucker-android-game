<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogoChose">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingVertical="15dp">

            <TextView
                android:id="@+id/logoChoseText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingVertical="10sp"
                android:text="@string/choose_logo_text"
                android:textColor="@color/colorDividerText"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingVertical="15dp">

            <ImageView
                android:id="@+id/user_logo_1"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:onClick="onLogoClick"
                android:src="@drawable/user_logo_1"
                android:tag="user_logo_1" />

            <ImageView
                android:id="@+id/user_logo_5"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:onClick="onLogoClick"
                android:src="@drawable/user_logo_5"
                android:tag="user_logo_5" />

            <ImageView
                android:id="@+id/user_logo_2"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:onClick="onLogoClick"
                android:src="@drawable/user_logo_2"
                android:tag="user_logo_2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingVertical="15dp">

            <ImageView
                android:id="@+id/user_logo_6"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:onClick="onLogoClick"
                android:src="@drawable/user_logo_6"
                android:tag="user_logo_6" />

            <ImageView
                android:id="@+id/user_logo_4"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:onClick="onLogoClick"
                android:src="@drawable/user_logo_4"
                android:tag="user_logo_4" />

            <ImageView
                android:id="@+id/user_logo_8"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:gravity="center"
                android:onClick="onLogoClick"
                android:src="@drawable/user_logo_8"
                android:tag="user_logo_8" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingVertical="15dp">

            <ImageView
                android:id="@+id/user_logo_3"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:onClick="onLogoClick"
                android:src="@drawable/user_logo_3"
                android:tag="user_logo_3" />

            <ImageView
                android:id="@+id/user_logo_7"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:onClick="onLogoClick"
                android:src="@drawable/user_logo_7"
                android:tag="user_logo_7" />

            <ImageView
                android:id="@+id/user_logo_9"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:onClick="onLogoClick"
                android:src="@drawable/user_logo_9"
                android:tag="user_logo_9" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>